{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",               // Gera informações de depuração
          "${file}",          // Compila o arquivo aberto
          "-o",               // Especifica o nome do executável
          "${fileDirname}/a.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compilando código C"
      }
    ]
  }
  
